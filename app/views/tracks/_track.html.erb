<li>
  <span class="content">
  	<%= track.status %>

  	<%= number_with_delimiter(number_with_precision(track.value, :precision => 2), :delimiter => " ", :separator => ",") %>â‚¬ 
  	of 
    <%= link_to track.label.name, track.expense %>
  	<%= track.date.strftime(" on %Y/%m/%d") %> 
  </span>
  <span class="timestamp">
    Posted <%= time_ago_in_words(track.created_at) %> ago.
